{
  "tabWidth": 4,
  "useTabs": false,
  "semi": true,
  "singleQuote": false,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "avoid",
  "endOfLine": "lf",
  "printWidth": 100,
  "overrides": [
    {
      "files": "*.go",
      "options": {
        "tabWidth": 4,
        "useTabs": false,
        "parser": "go"
      }
    },
    {
      "files": ["*.html", "*.css"],
      "options": {
        "tabWidth": 4,
        "useTabs": false
      }
    },
    {
      "files": ["*.json", "*.yml", "*.yaml"],
      "options": {
        "tabWidth": 2,
        "useTabs": false
      }
    },
    {
      "files": "*.md",
      "options": {
        "tabWidth": 2,
        "useTabs": false,
        "proseWrap": "preserve"
      }
    }
  ]
}
